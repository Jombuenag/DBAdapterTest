<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Alumnos"
        android:id="@+id/btnAlumnos"
        android:layout_gravity="center_horizontal|top"
        android:onClick="aPantallaAlumnos"
        android:layout_x="15dp"
        android:layout_y="325dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Profesores"
        android:id="@+id/btnProfesores"
        android:layout_gravity="center_horizontal|top"
        android:onClick="aPantallaProfesores"
        android:layout_x="180dp"
        android:layout_y="325dp" />
    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Eliminar BD"
        android:id="@+id/btnBorrarBD"
        android:layout_alignParentBottom="true"
        android:layout_x="15dp"
        android:layout_y="400dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="Consultas"
        android:id="@+id/btnConsultas"
        android:layout_alignParentBottom="true"
        android:layout_x="180dp"
        android:layout_y="400dp" />
</AbsoluteLayout>
