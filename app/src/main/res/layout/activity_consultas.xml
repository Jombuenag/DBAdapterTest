<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.takuma.dbadaptertest.Consultas">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PÃ¡gina de Consultas"
        android:id="@+id/MsgConsultas"
        android:textSize="25dp"
        android:singleLine="false"
        android:layout_marginLeft="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:divider="?android:dividerHorizontal"
        android:showDividers="middle"
        android:visibility="visible"
        android:background="#010101"
        android:id="@+id/separador_uno"
        android:layout_below="@+id/MsgConsultas"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">


    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nomBusqueda"
        android:layout_alignBottom="@+id/txtNomBusqueda"
        android:layout_alignEnd="@+id/separador_uno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre :"
        android:id="@+id/txtNomBusqueda"
        android:textSize="24dp"
        android:layout_above="@+id/cursoBusqueda"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ciclo :"
        android:id="@+id/txtCicloBusqueda"
        android:textSize="24dp"
        android:layout_alignBottom="@+id/cursoBusqueda"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cursoBusqueda"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/txtNomBusqueda" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/btnBuscar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alumnos"
        android:id="@+id/cbAlumnos"
        android:layout_below="@+id/separador_uno"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profesores"
        android:id="@+id/cbProfesores"
        android:layout_below="@+id/cbAlumnos"
        android:layout_alignParentStart="true" />


</RelativeLayout>
