<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.takuma.dbadaptertest.Consultas">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PÃ¡gina de Consultas"
        android:id="@+id/MsgConsultas"
        android:textSize="25dp"
        android:singleLine="false"
        android:layout_marginLeft="55dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:divider="?android:dividerHorizontal"
        android:showDividers="middle"
        android:visibility="visible"
        android:background="#010101"
        android:id="@+id/separador_uno"
        android:layout_below="@+id/MsgConsultas"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp">


    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rgAlumnosProfesores"
        android:baselineAligned="false"
        android:measureWithLargestChild="false"
        android:layout_below="@+id/separador_uno"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profesores"
            android:id="@+id/rbProfesores"
            android:layout_alignTop="@+id/rgAlumnosProfesores"
            android:layout_alignEnd="@+id/MsgConsultas"
            android:layout_weight="1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alumnos"
            android:id="@+id/rbAlumnos"
            android:layout_below="@+id/separador_uno"
            android:layout_alignParentStart="true"
            android:layout_weight="1" />

    </RadioGroup>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nomBusqueda"
        android:layout_alignBottom="@+id/txtNomBusqueda"
        android:layout_alignEnd="@+id/separador_uno" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre :"
        android:id="@+id/txtNomBusqueda"
        android:textSize="24dp"
        android:layout_marginTop="126dp"
        android:layout_below="@+id/rgAlumnosProfesores"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp"
        android:id="@+id/rgCiclos"
        android:layout_above="@+id/nomBusqueda"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rgAlumnosProfesores"
        android:layout_alignStart="@+id/btnBuscar">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAM"
            android:id="@+id/rbBuscaDam" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAW"
            android:id="@+id/rbBuscaDaw" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASIR"
            android:id="@+id/rbBuscaAsir" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3D"
            android:id="@+id/rbBusca3D" />

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ciclo :"
        android:id="@+id/txtCicloBusqueda"
        android:textSize="24dp"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/nomBusqueda"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/cursoBusqueda"
        android:layout_alignTop="@+id/txtCicloBusqueda"
        android:layout_marginTop="-10dp"
        android:layout_alignEnd="@+id/nomBusqueda" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:id="@+id/btnBuscar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
