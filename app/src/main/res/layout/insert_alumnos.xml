<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".InsertAlumnos">

//TEXTVIEWS DE ALUMNOS
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nombre"
        android:id="@+id/txtNombreA"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Apellidos"
        android:id="@+id/txtApellidosA"
        android:layout_below="@+id/txtNombreA"
        android:layout_alignStart="@+id/txtNombreA"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Edad"
        android:id="@+id/txtEdadA"
        android:layout_below="@+id/txtApellidosA"
        android:layout_alignStart="@+id/txtApellidosA"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Curso"
        android:id="@+id/txtCursoA"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtCicloA"
        android:layout_alignLeft="@+id/txtEdadA"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ciclo"
        android:id="@+id/txtCicloA"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtMedia"
        android:layout_alignLeft="@+id/txtEdadA"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nota Media"
        android:id="@+id/txtMedia"
        android:layout_below="@+id/txtEdadA"
        android:layout_alignStart="@+id/txtEdadA"
        android:layout_marginTop="15dp" />
//EDITTEXT DE ALUMNOS
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNombreA"
        android:layout_toEndOf="@+id/txtApellidosA"
        android:layout_above="@+id/editApellidosA" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editCursoA"
        android:layout_below="@+id/txtCicloA"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/editEdadA" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editEdadA"
        android:layout_below="@+id/txtApellidosA"
        android:layout_toEndOf="@+id/txtCursoA" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editApellidosA"
        android:layout_below="@+id/txtNombreA"
        android:layout_alignStart="@+id/editNombreA" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNota"
        android:layout_below="@+id/txtEdadA"
        android:layout_alignEnd="@+id/editEdadA"
        android:layout_toEndOf="@+id/txtMedia" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editCicloA"
        android:layout_below="@+id/txtMedia"
        android:layout_alignEnd="@+id/editNota"
        android:layout_toEndOf="@+id/txtCicloA" />
//BOTONES DE ALUMNOS
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir Info"
        android:id="@+id/btnAñadirAlumno"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="50dp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver info"
        android:id="@+id/btnVerInfoAlumno"
        android:layout_alignTop="@+id/btnAñadirAlumno"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="125dp"
        android:layout_height="49dp"
        android:text="Borrar Alumno"
        android:id="@+id/btnBorrarAlumno"
        android:layout_alignBottom="@+id/btnVerInfoAlumno"
        android:layout_toStartOf="@+id/btnVerInfoAlumno" />
</RelativeLayout>
